	<definition name="fields/add" extends="baselayout">
		<put-attribute name="body" value="/WEB-INF/views/field/add.jsp"/>
	</definition>
	<definition name="fields/update" extends="baselayout">
		<put-attribute name="body" value="/WEB-INF/views/field/update.jsp"/>
	</definition>	
	<definition name="fields/management" extends="baselayout">
